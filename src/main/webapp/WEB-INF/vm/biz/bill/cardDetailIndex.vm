<!--mainContent-->
   <div class="mainContent fl">
    	<div class="crumb_fund">
        	<span>运营后台</span> &gt; <span>渠道管控中心</span> &gt; <span class="cur"></span>
        </div>
        <form action="../cardDetail/cardDetailIndex.do" method="post"  id="formSubmit">
        <div class="contentList borderNo">
        	<div class="forms mb">
            	<div class="formsList1 clearfix">
							<dl>
								<dt>日期</dt>
					            <dd>
					            	 <input class="input160" name="datetime" id="datetime" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'})" value="$!{query.datetime}"/>
					            </dd>
					        </dl> 
							<dl>
								<dt>操作类型</dt>
					            <dd>
                                    <select name="operation">
                                        <option value="1">收入</option>
                                        <option value="2">支出</option>
                                    </select>					            </dd>
					        </dl> 
							<dl>
								<dt>卡号</dt>
					            <dd>
					            	 <input class="input160" name="cardno" id="cardno" value="$!{query.cardno}"/>
					            </dd>
					        </dl> 
                    <div class="clear"></div>
                    <div><input type="button" class="button_Green searchBtn " value="搜 索"/></div>
                </div>
            </div>
            <div class="createNew ">
            		<div class="fl mb mt"></div>
                <div class="fr mb"><input type="button" id="addButton" value="新 建" class="button_Green"/></div>
            </div>
            <div class="createNew ">
                <div class="fl mb mt">$!aa 收入：$!{cardStatisticsPo.income} ， 支出：$!{cardStatisticsPo.expend}， 汇总：$!{cardStatisticsPo.total}</div>
            </div>
        	<div class="tabBox queryCost1 mb">
            	<table width="100%" cellpadding="0" cellspacing="0">
            <tr>
						<th class="pl40"></th>
						<th>日期</th>
						<th>操作类型</th>
						<th>卡号</th>
						<th>金额</th>
						<th>备注</th>
                <th>操作</th>
            </tr>
             #if($!{pageInfos})
                #foreach($!{info} in $!{pageInfos})
	            	<tr>
								<td class="pl40">$!{info.id}</td>
								<td>$!dateTool.format("yyyy-MM-dd",$!{info.datetime})</td>
								<td>
                                   #if($!{info.operation} ==1)
								    收入
                                    #elseif($!{info.operation} ==2)
                                    支出
                                    #end
                                </td>
								<td>$!{info.cardno}</td>
								<td>$!{info.price}</td>
								<td>$!{info.remark}</td>
		                <td>
                            #if($!dateTool.format("yyyy-MM-dd",$!{info.datetime}) == $!{today})
                                <a href="/cardDetail/del.do?id=$!{info.id}">删除</a>
                            #end
		                </td>
	           		</tr>
	             #end
	    	 #end
        </table>
			</div>
            <div class="fr">
            	<!--公用翻页代码-->
                #set($attr='formSubmit')
            	#showPageFormSubmit($pageInfos $attr)
                <!--END公用翻页代码-->
            </div>
            <div class="clear"></div>
            
        </div>
        </form>
    </div>
    <!--end mainContent-->
<script type="text/javascript">
$(document).ready(function(){
	$(".button_Green.searchBtn").bind("click",function(){
		$("#formSubmit").submit();
	});
	
	$("#addButton").bind("click",function(){
		location.href="../cardDetail/toAdd.do";
	});
});

</script>
